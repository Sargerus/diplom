@model IEnumerable<WebApplication1.Models.Backlog>

@{
                /**/

                ViewBag.Title = "Backlog";
}

<h2>Backlogs</h2>

<p style="text-align:right;">
    @Html.ActionLink("+Add Backlog", "Create")
</p>

@foreach (var item in Model)
{
    <table class="table">
<tr>
    <td>
    @Html.ActionLink(@item.Description, "Details", "Backlogs", new { @id = item.BacklogId }, null)
    </td>
    <td>
        @item.CreatedBy
    </td>
    <td>
        @item.BacklogState
    </td>
</tr>
        <tr></tr>
        </table>

        if (item.Tasks != null)
        {
    <table class="table" style="font-size:12px; width:90%; margin-left:8%;">

        @foreach (var task in item.Tasks)
        {
            <tr>
                <td>
                    @Html.ActionLink(@task.Description, "Details", "BacklogTasks", new { @id = task.TaskId }, null)
                </td>
                <td>
                    @task.CreatedOn
                </td>
                <td>
                    @task.CreatedBy
                </td>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td style="text-align:right">
                @Html.ActionLink("+Add Task", "Create", "BacklogTasks", new { @id = item.BacklogId }, null)
            </td>
        </tr>
    </table>

         }
 }

