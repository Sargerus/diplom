            @Html.HiddenFor(model => model.ProjectKey)
            @Html.HiddenFor(model => model.UserAssigned)

            <div class="form-group">
                @Html.LabelFor(model => model.ShortText, htmlAttributes: new { @class = "control-label col-md-2" })
