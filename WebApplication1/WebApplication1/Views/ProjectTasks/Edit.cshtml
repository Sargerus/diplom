@model WebApplication1.Models.ProjectTask

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Body{


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>ProjectTask</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
